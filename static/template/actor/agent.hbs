<form class="{{cssClass}}" autocomplete="off">
  <div class="sheet-header">
    <div class="avatar">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
    </div>
    <div class="details">
      <div class="row">
        <div class="name">
          <label>{{localize "BIO.NAME"}}</label>
          <input name="name" type="text" value="{{actor.name}}" />
        </div>
        <div class="species">
          <label class="item-label item-edit" data-item-id="{{actor.system.species.document.id}}" data-type="species">{{localize "BIO.SPECIES"}}</label>
          {{#if actor.system.species.document}}
            <input disabled type="text" value="{{actor.system.species.name}}" />
            <a class="remove-singleton" data-path="system.species"><i class="fa-solid fa-xmark"></i></a>
          {{else}}
            <input type="text" name="system.species.name" value="{{actor.system.species.name}}" />
          {{/if}}
        </div>
      </div>
      <div class="row">
        <div class="faction">
          <label class="item-label item-edit" data-item-id="{{actor.system.faction.document.id}}" data-type="faction">{{localize "BIO.FACTION"}}</label>
          {{#if actor.system.faction.document}}
            <input disabled type="text" value="{{actor.system.faction.name}}" />
            <a class="remove-singleton" data-path="system.faction"><i class="fa-solid fa-xmark"></i></a>
          {{else}}
            <input type="text" name="system.faction.name" value="{{actor.system.faction.name}}" />
          {{/if}}
        </div>
        <div class="archetype">
          <label class="item-label item-edit" data-item-id="{{actor.system.archetype.document.id}}" data-type="archetype">{{localize "BIO.ARCHETYPE"}}</label>
          {{#if actor.system.archetype.document}}
            <input disabled type="text" value="{{actor.system.archetype.name}}" />
            <a class="remove-singleton" data-path="system.archetype"><i class="fa-solid fa-xmark"></i></a>
          {{else}}
            <input type="text" name="system.archetype.name" value="{{actor.system.archetype.name}}" />
          {{/if}}
        </div>
      </div>
      <div class="row">
        <div class="quote">
          <label>{{localize "BIO.QUOTE"}}</label>
          <input title="{{system.bio.quote}}" name="system.bio.quote" type="text" value="{{system.bio.quote}}" />
        </div>
        <div class="wrath">
          <label>{{localize "RESOURCE.WRATH"}}</label>
          <input name="system.resources.wrath" type="number" value="{{system.resources.wrath}}" data-dtype="Number" />
        </div>
      </div>
    </div>
  </div>

  <div class="sheet-tabs tabs" data-group="primary">
    <b class="item" data-tab="stats">{{localize "TAB.STATS"}}</b>
    <b class="item" data-tab="combat">{{localize "TAB.COMBAT"}}</b>
    <b class="item" data-tab="talents">{{localize "TAB.TALENTS"}}</b>
    <b class="item" data-tab="gear">{{localize "TAB.GEAR"}}</b>
    <b class="item" data-tab="effects">{{localize "TAB.EFFECTS"}}</b>
    <b class="item" data-tab="notes">{{localize "TAB.NOTES"}}</b>
  </div>

  <div class="sheet-body">
    <div class="stats tab" data-group="primary" data-tab="stats">
      {{> systems/wrath-and-glory/template/actor/tab/stats.hbs}}
    </div>
    <div class="tab" data-group="primary" data-tab="combat">
      {{> systems/wrath-and-glory/template/actor/tab/combat.hbs}}
    </div>
    <div class="talents tab" data-group="primary" data-tab="talents">
      {{> systems/wrath-and-glory/template/actor/tab/talents.hbs}}
    </div>
    <div class="gear tab" data-group="primary" data-tab="gear">
      {{> systems/wrath-and-glory/template/actor/tab/gear.hbs}}
    </div>
    <div class="tab" data-group="primary" data-tab="effects">
      {{> systems/wrath-and-glory/template/actor/tab/effects.hbs}}
    </div>
    <div class="tab" data-group="primary" data-tab="notes">
      {{> systems/wrath-and-glory/template/actor/tab/notes.hbs}}
    </div>
  </div>
</form>